<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<?import net.jasonly027.todolist.components.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="stackPane"
           fx:controller="net.jasonly027.todolist.controllers.MainController">
    <VBox alignment="TOP_CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <TasksBar fx:id="tasksBar" stackPane="$stackPane"/>
        <TasksTable fx:id="tasksTable" stackPane="$stackPane" VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>