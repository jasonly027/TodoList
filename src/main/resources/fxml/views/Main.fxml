<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<?import net.jasonly.todolist.components.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="stackPane"
           fx:controller="net.jasonly.todolist.controllers.MainController"
            stylesheets="@/css/style.css, @/css/Main.css">
    <VBox styleClass="mainVBox">
        <TasksBar fx:id="tasksBar" stackPane="$stackPane"/>
        <TasksTable fx:id="tasksTable" stackPane="$stackPane" VBox.vgrow="ALWAYS"/>
    </VBox>
</StackPane>