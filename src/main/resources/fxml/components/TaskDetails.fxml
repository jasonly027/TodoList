<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.SVGPath?>

<?import net.jasonly027.todolist.components.ToggleDone?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         alignment="CENTER"
         fillWidth="false">
    <background>
        <Background>
            <fills>
                <BackgroundFill fill="gray"/>
            </fills>
        </Background>
    </background>

    <VBox alignment="CENTER" spacing="10">
        <background>
            <Background>
                <fills>
                    <BackgroundFill fill="aquamarine"/>
                </fills>
            </Background>
        </background>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <HBox alignment="TOP_RIGHT">
            <Button onAction="#onCloseClick" text="X"/>
        </HBox>
        <Text text="Task Details"/>
        <TextField fx:id="taskName" promptText="Task Name"/>
        <HBox spacing="10" maxHeight="24">
            <ToggleDone fx:id="toggleDone" maxHeight="Infinity"/>
            <Button onAction="#onDeleteClick" maxHeight="Infinity">
                <graphic>
                    <SVGPath
                            content="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
                            fill="transparent" stroke="black" strokeWidth="1.5"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Delete task"/>
                </tooltip>
            </Button>
            <DatePicker fx:id="taskDate" promptText="Due Date" maxHeight="Infinity"/>
            <ComboBox fx:id="taskPriority" maxHeight="Infinity"/>
            <TextField fx:id="taskTags" promptText="Tags" maxHeight="Infinity"/>
        </HBox>
        <TextArea fx:id="taskDescription" promptText="Description"/>
    </VBox>
</fx:root>
